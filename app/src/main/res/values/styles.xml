        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Small">
        <item name="minWidth">24dip</item>
        <item name="maxWidth">24dip</item>
        <item name="minHeight">24dip</item>
        <item name="maxHeight">24dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>
    <!--
            Base application theme, dependent on API level. This theme is replaced
            by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
        -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="layout">
        <item name="android:background">@color/clear</item>
    </style>

    <style name="layout.title">
        <item name="android:background">@drawable/bg_title</item>
    </style>

    <style name="iv">
        <item name="android:background">@color/clear</item>
    </style>

    <style name="iv.item_arrow">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="tv">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/clear</item>
    </style>

    <style name="tv.title_grey">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/con_grey</item>
    </style>

    <style name="tv.con_grey">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/con_grey</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>

    <style name="tv.con_nor">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="tv.item_con">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tv.bottom_txt">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/btn_content</item>
    </style>

    <style name="tv.btn">
        <item name="android:textColor">@color/btn_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tv_button">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/btn_content</item>
        <item name="android:background">@layout/shape_corner</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="tv_info">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#0000ff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@layout/shape_rectangle</item>
    </style>

    <style name="tv.smallbtn">
        <item name="android:textColor">@color/btn_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tv.btn_nor">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tv.btn_unable">
        <item name="android:textColor">@color/btn_content_unable</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tv.btn_enable">
        <item name="android:textColor">@color/btn_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tv.btn_unable_withbg">
        <item name="android:background">@drawable/bg_btn_disabled</item>
