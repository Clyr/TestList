    </style>

    <style name="MP.Theme.TextAppearance.ActionMode.Title" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="MP.Theme.TextAppearance.List">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MP.Theme.TextAppearance.List.EndSummary">
        <item name="android:id">@id/text_view_summary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mp.text.hint</item>
        <item name="android:textSize">@dimen/mp.text.hint</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/mp.padding.large</item>
    </style>

    <style name="MP.Theme.TextAppearance.List.Title">
        <item name="android:textColor">@color/selector_list_title_text</item>
        <item name="android:textSize">@dimen/mp.text.list.title</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MP.Theme.TextAppearance.List.Hint">
        <item name="android:textColor">@color/selector_list_hint_text</item>
        <item name="android:textSize">@dimen/mp.text.list.hint</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MP.Theme.TextAppearance.List.Empty">
        <item name="android:id">@id/text_view_empty</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/mp.margin.xlarge</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mp.text.hint</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MP.Theme.TextAppearance.LargePopupMenu" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MP.Theme.TextAppearance.SmallPopupMenu" parent="TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Daemon">
        <!--设置背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--设置窗口框架为空-->
        <item name="android:windowFrame">@null</item>
        <!--设置没有 title-->
        <item name="android:windowNoTitle">true</item>
        <!--设置浮动-->
        <item name="android:windowIsFloating">true</item>
        <!--窗口动画为空-->
        <item name="android:windowAnimationStyle">@null</item>
        <!--不可预览-->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
