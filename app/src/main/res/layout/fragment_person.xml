<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/title"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <com.matrix.myapplication.view.RoundImageView
                        android:id="@+id/person_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/tramslogo"
                        android:layout_centerInParent="true"/>
            <!--<ImageView-->
                <!--android:id="@+id/person_image"-->
                <!--android:layout_width="120dp"-->
                <!--android:layout_height="120dp"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:src="@mipmap/ic_launcher_round"/>-->
            <!--<View-->
                <!--android:layout_width="180dp"-->
                <!--android:background="@drawable/circle_trans"-->
                <!--android:layout_height="180dp"/>-->
            <TextView
                android:id="@+id/person_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:text="欢迎你，管理员"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/person_p3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/person_switch"
                    android:layout_width="85dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView style="@style/line_text"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/gray_ll"/>

        <TextView style="@style/line_text"/>

        <LinearLayout
            android:id="@+id/person_p1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="13dp"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:paddingTop="13dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:tint="@color/black"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <TextView style="@style/line_text"/>

        <LinearLayout
            android:id="@+id/person_p2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="13dp"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:paddingTop="13dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:tint="@color/black"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <TextView style="@style/line_text"/>

        <LinearLayout
            android:id="@+id/person_p4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="13dp"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:paddingTop="13dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:tint="@color/black"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <TextView style="@style/line_text"/>

        <LinearLayout
            android:id="@+id/person_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="13dp"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:paddingTop="13dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:tint="@color/black"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
        <TextView style="@style/line_text"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/person_out1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="退出"
            android:textColor="@color/red"
            android:textSize="18sp"/>
    </RelativeLayout>

</LinearLayout>