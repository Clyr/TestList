<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/layout.title">

        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            style="@style/tv.btn"
            android:text="@string/back"
            android:layout_alignParentLeft="true"
            android:id="@+id/btn_menu_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/menu"
            android:layout_centerHorizontal="true"
            style="@style/tv.btn_nor" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout_menu_list_container">

            <com.huawei.esdk.demo.widget.MenuItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_menu_http" />

            <com.huawei.esdk.demo.widget.MenuItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_menu_encryptdecrypt" />

            <com.huawei.esdk.demo.widget.MenuItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_menu_mdm" />
            <com.huawei.esdk.demo.widget.MenuItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_menu_log" />
             <com.huawei.esdk.demo.widget.MenuItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_menu_wifi" />
            <com.huawei.esdk.demo.widget.MenuItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_menu_checkbind" />
            <com.huawei.esdk.demo.widget.MenuItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_menu_checknettype" />
            <!-- 	        <com.huawei.esdk.demo.widget.MenuItemView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/item_menu_speed"
                            /> -->
        </LinearLayout>
    </ScrollView>
</LinearLayout>
