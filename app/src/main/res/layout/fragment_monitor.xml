<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include
        android:id="@+id/incude"
        layout="@layout/title"></include>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/bg_shape_gray"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_bg_selector"
            android:padding="3dp"
            android:src="@drawable/left_img_selector"/>

        <ImageView
            android:id="@+id/image_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right_bg_selector"
            android:padding="3dp"
            android:src="@drawable/right_img_selector"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center">

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/name11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="监控资源总数"
                    android:textColor="@color/white"/>

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/num11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="23"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/name12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="异常数"
                    android:textColor="@color/white"/>

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/num12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/name13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="占比 21%"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/num13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@color/orange"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="23"
                    android:textColor="@color/white"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center">

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/name21"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="监控点总数"
                    android:textColor="@color/white"/>

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/num21"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="48"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/name22"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="异常数"
                    android:textColor="@color/white"/>

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/num22"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="9"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/name23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="占比 14%"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/num23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@color/orange"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="23"
                    android:textColor="@color/white"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/serach_modle_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_search"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/search_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_shape_gray"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/left_bg_selector"
                android:padding="3dp"
                android:src="@drawable/left_img_selector"/>

            <ImageView
                android:id="@+id/image_type4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_bg_selector"
                android:padding="3dp"
                android:src="@drawable/right_img_selector"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/type1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="业务系统"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/type2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设备类型"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_shape_circle"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:scaleType="matrix"
            android:src="@drawable/bg_shape_white2"/>

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>

</LinearLayout>