<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/roctet_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/updataversion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:text="新版本更新内容"
        android:textColor="#295775"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/updataversioncode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="1.0.5"
        android:textColor="#295775"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="240dp"
        android:layout_height="100dp" 
        android:scrollbars="none">

        <TextView
            android:id="@+id/updataversion_msg"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="1.生命不息，奋斗不止\n2.万物起于微乎，量变引发质变\n3.这是版本升级描述"
            android:textColor="#8e8e8e"
            android:textSize="13sp" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/dialog_sure"
        android:layout_width="240dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/updataversionbut_bg"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关闭"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>